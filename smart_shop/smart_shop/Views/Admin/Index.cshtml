
@{
    ViewBag.Title = "Administrator";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    smart_shop.Models.smart_shopEntities db = new smart_shop.Models.smart_shopEntities();
}

<div class="main-page">
    <div class="row-one">
        <div class="col-md-4 widget">
            <div class="stats-left ">
                <h5>Tổng</h5>
                <h4>Đơn đặt hàng</h4>
            </div>
            <div class="stats-right">
                <label> @ViewBag.TongDDH </label>
            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="col-md-4 widget states-mdl">
            <div class="stats-left">
                <h5>Tổng</h5>
                <h4>Bình luận</h4>
            </div>
            <div class="stats-right">
                <label> @ViewBag.TongBL</label>
            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="col-md-4 widget states-last">
            <div class="stats-left">
                <h5>Tổng</h5>
                <h4>Sản phẩm</h4>
            </div>
            <div class="stats-right">
                <label>@ViewBag.TongSP</label>
            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
  
    <div class="row">
        <center>
            <div class="col-md-6 stats-info widget" style="margin:0 20px">
                <div class="stats-title">
                    <h4 class="title">Thống kê</h4>
                </div>
                <div class="stats-body">
                    <ul class="list-unstyled">
                        <li>
                            Loại sản phẩm <span class="pull-right">@db.loaisps.Count()</span>

                        </li>
                        <li>
                            Sản phẩm <span class="pull-right">@db.sanphams.Count()</span>

                        </li>
                        <li>
                            Thành viên <span class="pull-right">@db.thanhviens.Count()</span>

                        </li>
                        <li>
                            Bình luận <span class="pull-right">@db.binhluans.Count()</span>

                        </li>
                        <li>
                            Đơn đặt <span class="pull-right">@db.dondats.Count()</span>

                        </li>
                      
                    </ul>
                </div>
            </div>
            <div class="col-md-6 stats-info widget right" style="margin:0 20px;float:right">

                <div class="stats-title">
                    <h4 class="title">Thống kê</h4>
                </div>
                <div class="stats-body">
                    <ul class="list-unstyled">
                        <li>
                            Đã đánh giá <span class="pull-right">@db.danhgias.Count()</span>

                        </li>
                     
                        <li>
                            Nhân viên <span class="pull-right">@db.nhanviens.Count()</span>

                        </li>
                      
                      
                      
                    </ul>
                </div>

            </div>

        </center>
      
        <div class="clearfix"> </div>
    </div>
   
    <div class="clearfix"> </div>
</div>

