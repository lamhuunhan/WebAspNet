@using smart_shop.Models;

@{ 
    smart_shopEntities db = new smart_shopEntities();
    List<sanpham> ao_new = db.sanphams.Where(n => n.MaLoaiSP == 1).OrderByDescending(n=>n.MaSanPham).AsQueryable().ToList();
    List<sanpham> giay_new = db.sanphams.Where(n => n.MaLoaiSP == 3).OrderByDescending(n => n.MaSanPham).AsQueryable().ToList();
    List<sanpham> dongho_new = db.sanphams.Where(n => n.MaLoaiSP == 4).OrderByDescending(n => n.MaSanPham).AsQueryable().ToList();
}



<div class="container">

    <script src="~/Content/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
							$(document).ready(function () {
								$('#horizontalTab').easyResponsiveTabs({
									type: 'default', //Types: default, vertical, accordion
									width: 'auto', //auto or any width like 600px
									fit: true   // 100% fit in a container
								});
							});

    </script>
    <div class="sap_tabs">
        <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
            <ul class="resp-tabs-list">
                <li class="resp-tab-item" aria-controls="tab_item-0" role="tab"><span>Áo mới nhất</span></li>
                <li class="resp-tab-item" aria-controls="tab_item-1" role="tab"><span>Mắt kính mới nhất</span></li>
                <li class="resp-tab-item" aria-controls="tab_item-2" role="tab"><span>Giày mới nhất</span></li>
            </ul>
            <div class="resp-tabs-container">
                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                    @foreach (var item in ao_new.Take(12))
                    {
                        <div class="col-md-3 product-men yes-marg">
                            <div class="men-pro-item simpleCart_shelfItem">
                                <div class="men-thumb-item">
                                    <img src="@Url.Content("~/Content/images/" + item.HinhAnh1)" alt="@item.TenSanPham" class="pro-image-front" style="width:100%">
                                    <img src="@Url.Content("~/Content/images/" + item.HinhAnh1)" alt="" class="pro-image-back" style="width:100%">
                                    <div class="men-cart-pro">
                                        <div class="inner-men-cart-pro">
                                            <a href="@Url.Action("Single","Products", new {id=item.MaSanPham,TenSanPham_KhongDau=item.TenSanPham_KhongDau,categoryName=item.loaisp.Url})" class="link-product-add-cart">Xem chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="item-info-product ">
                                    <h4><a href="@Url.Action("Single","Products", new {id=item.MaSanPham,TenSanPham_KhongDau=item.TenSanPham_KhongDau,categoryName=item.loaisp.Url})">@item.TenSanPham</a></h4>
                                    <div class="info-product-price">
                                        <span class="item_price">@item.DonGia.Value.ToString("#,##") VNĐ</span>
                                        
                                    </div>
                                    <a class="single-item hvr-outline-out addcart" name="@item.MaSanPham">Thêm giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                    }
                    
                    <div class="clearfix"></div>
                </div>
                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                    @foreach (var item in giay_new.Take(12))
                    {
                        <div class="col-md-3 product-men yes-marg">
                            <div class="men-pro-item simpleCart_shelfItem">
                                <div class="men-thumb-item">
                                    <img src="@Url.Content("~/Content/images/"+item.HinhAnh1)" alt="@item.TenSanPham" class="pro-image-front">
                                    <img src="@Url.Content("~/Content/images/"+item.HinhAnh1)" alt="" class="pro-image-back">
                                    <div class="men-cart-pro">
                                        <div class="inner-men-cart-pro">
                                            <a href="@Url.Action("Single","Products", new {id=item.MaSanPham,TenSanPham_KhongDau=item.TenSanPham_KhongDau,categoryName=item.loaisp.Url})" class="link-product-add-cart">Xem chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="item-info-product ">
                                    <h4><a href="@Url.Action("Single","Products", new {id=item.MaSanPham,TenSanPham_KhongDau=item.TenSanPham_KhongDau,categoryName=item.loaisp.Url})">@item.TenSanPham</a></h4>
                                    <div class="info-product-price">
                                        <span class="item_price">@item.DonGia.Value.ToString("#,##") VNĐ</span>

                                    </div>
                                    <a class="single-item hvr-outline-out addcart" name="@item.MaSanPham">Thêm giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="clearfix"></div>
                </div>
                <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-2">
                    @foreach (var item in dongho_new.Take(12))
                    {
                        <div class="col-md-3 product-men yes-marg">
                            <div class="men-pro-item simpleCart_shelfItem">
                                <div class="men-thumb-item">
                                    <img src="@Url.Content("~/Content/images/"+item.HinhAnh1)" alt="@item.TenSanPham" class="pro-image-front">
                                    <img src="@Url.Content("~/Content/images/"+item.HinhAnh1)" alt="" class="pro-image-back">
                                    <div class="men-cart-pro">
                                        <div class="inner-men-cart-pro">
                                            <a href="@Url.Action("Single","Products", new {id=item.MaSanPham,TenSanPham_KhongDau=item.TenSanPham_KhongDau,categoryName=item.loaisp.Url})"class="link-product-add-cart">Xem chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="item-info-product ">
                                    <h4><a href="@Url.Action("Single","Products", new {id=item.MaSanPham,TenSanPham_KhongDau=item.TenSanPham_KhongDau,categoryName=item.loaisp.Url})">@item.TenSanPham</a></h4>
                                    <div class="info-product-price">
                                        <span class="item_price">@item.DonGia.Value.ToString("#,##") VNĐ</span>

                                    </div>
                                    <a class="single-item hvr-outline-out addcart" name="@item.MaSanPham">Thêm giỏ hàng</a>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>


